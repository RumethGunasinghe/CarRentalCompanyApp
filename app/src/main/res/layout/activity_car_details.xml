<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Car Image -->
    <ImageView
        android:id="@+id/ivCarDetailImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Car Name -->
    <TextView
        android:id="@+id/tvCarDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Name"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="?android:textColor"
        app:layout_constraintTop_toBottomOf="@id/ivCarDetailImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Car Info (year, model, rating) -->
    <TextView
        android:id="@+id/tvCarDetailInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1974 Volkswagen Cabriolet • 4.6★"
        android:textSize="16sp"
        android:textColor="?android:textColor"
        app:layout_constraintTop_toBottomOf="@id/tvCarDetailName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Daily Cost -->
    <TextView
        android:id="@+id/tvCarDetailCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Cost: 180 credits"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="?android:textColor"
        app:layout_constraintTop_toBottomOf="@id/tvCarDetailInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Description Paragraph -->
    <TextView
        android:id="@+id/tvCarDetailDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This 1974 Volkswagen Cabriolet in Orange Peel is a classic symbol of open-air freedom. Perfect for scenic drives along the coast."
        android:textSize="15sp"
        android:textColor="?android:textColor"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvCarDetailCost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Days Selected Label -->
    <TextView
        android:id="@+id/tvDaysSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days: 1"
        android:textSize="16sp"
        android:textColor="?android:textColor"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCarDetailDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SeekBar -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="6"
        app:layout_constraintTop_toBottomOf="@id/tvDaysSelected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="20dp" />

    <!-- Buttons (Back + Rent) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:textColor="@android:color/white"
            android:backgroundTint="?attr/colorSecondary" />

        <View
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnRent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rent"
            android:textColor="@android:color/white"
            android:backgroundTint="?attr/colorPrimary" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
